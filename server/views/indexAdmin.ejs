  <script type="text/javascript">
    var socket = io.connect("http://" + "<%=ip%>" + ":8080", {
      forceNew: true
    });
    socket.on("currentPercentage", data => {
      const occupied = data.occupied;
      const free = data.free;
      updatePercentage(occupied, free);
    });
    function updatePercentage(occupied, free) {
      demo.updatePercentageRealTime(occupied, free);
    }
    $(document).ready(function() {
      // Javascript method's body can be found in assets/js/demos.js
      // Set dates and get data for first time
      let fechaKPI2 = document.getElementById("fechaKPI2");
      fechaKPI2.value = new Date().toISOString().substr(0, 10);
      fechaKPI2.max = new Date().toISOString().substr(0, 10);
      let fechaDesdeKPI3 = document.getElementById("fechaDesdeKPI3");
      fechaDesdeKPI3.value = "2019-01-01";
      fechaDesdeKPI3.max = new Date().toISOString().substr(0, 10);
      let fechaHastaKPI3 = document.getElementById("fechaHastaKPI3");
      fechaHastaKPI3.value = new Date().toISOString().substr(0, 10);
      fechaHastaKPI3.min = "2019-01-01";
      getPercentageByDate();
      getMeansByPeriod();
    });
    ///// KPI2 /////
    let apiPercentageByDate = new XMLHttpRequest();
    apiPercentageByDate.onreadystatechange = function() {
      if (this.readyState === 4 && this.status === 200) {
        if ("ERROR_BD" !== this.responseText) {
          if ("ERROR_FORMATO_CORREO" !== this.responseText) {
            updateKPI2(JSON.parse(this.responseText));
          } else {
            // Abrir modal informando de error en el formato de correo
            document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
            document.getElementById("mensaje").innerHTML =
              "Ingrese un correo válido.";
            $("#myModal").modal("show");
          }
        } else {
          // Abrir modal informando de error en la bd
          document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
          document.getElementById("mensaje").innerHTML =
            "Ocurrió un error al acceder a la base de datos. Intente nuevamente.";
          $("#myModal").modal("show");
        }
      }
    };
    var chartKpi2;
    function updateKPI2(data) {
      console.log("kpi2");
      var HOURS = [
        "08:00",
        "09:00",
        "10:00",
        "11:00",
        "12:00",
        "13:00",
        "14:00",
        "15:00",
        "16:00",
        "17:00",
        "18:00",
        "19:00",
        "20:00",
        "21:00",
        "22:00"
      ];
      let datos=[];
      console.log(data);
      for(let i=8; i<=22;i++){
        datos.push(data[i]);
      }
      if(chartKpi2) chartKpi2.destroy();
      var ctx = document.getElementById("kpi2Chart");
      chartKpi2 = new Chart(ctx, {
        type: "bar",
        data: {
          labels: HOURS,
          datasets: [
            {
              label: "Porcentaje",
              data: datos,
              backgroundColor: "#33A2FF"
            }
          ]
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                  max: 100,
                    stepSize: 25,
                },
                scaleLabel: {
                    display: true,
                    fontSize: 16,
                    labelString: "Ocupación (%)",
                }
              }
            ],
            xAxes: [
              {
                scaleLabel: {
                    display: true,
                    fontSize: 16,
                    labelString: "Hora",
                }
              }
            ]
          }
        }
      });
    }
    function getPercentageByDate() {
      console.log("Se actualizará el porcentaje");
      let fecha = document.getElementById("fechaKPI2");
      apiPercentageByDate.open(
        "GET",
        "../api/calculations/percentage/" + fecha.value,
        true
      );
      apiPercentageByDate.send();
    }
    ////////////////////////////////////////////////////////////////////////////

    /////// KPI3 ////////
    let apiMeansByPeriod = new XMLHttpRequest();
    apiMeansByPeriod.onreadystatechange = function() {
      if (this.readyState === 4 && this.status === 200) {
        if ("ERROR_BD" !== this.responseText) {
          if ("ERROR_FORMATO_CORREO" !== this.responseText) {
            updateKPI3(JSON.parse(this.responseText));
          } else {
            // Abrir modal informando de error en el formato de correo
            document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
            document.getElementById("mensaje").innerHTML =
              "Ingrese un correo válido.";
            $("#myModal").modal("show");
          }
        } else {
          // Abrir modal informando de error en la bd
          document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
          document.getElementById("mensaje").innerHTML =
            "Ocurrió un error al acceder a la base de datos. Intente nuevamente.";
          $("#myModal").modal("show");
        }
      }
    };
    var chartKpi3;
    function updateKPI3(data){
      var labels = [];
      for(let i=0;i<data.length;i++){
        labels.push((i+1));
      }
      console.log(data);
      if(chartKpi3)chartKpi3.destroy();
      var ctx = document.getElementById("kpi3Chart");
      chartKpi3 = new Chart(ctx, {
        type: "bar",
        data: {
          labels: labels,
          datasets: [
            {
              label: "Tiempo de ocupación",
              data: data,
              backgroundColor: "#FF9500"
            }
          ]
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true
                },
                scaleLabel: {
                    display: true,
                    fontSize: 16,
                    labelString: "Tiempo Promedio (mins)",
                }
              }
            ],
            xAxes: [
              {
                scaleLabel: {
                    display: true,
                    fontSize: 16,
                    labelString: "Lugar",
                }
              }
            ]
          }
        }
      });
      
    }
    function getMeansByPeriod() {
      let dateFrom = document.getElementById("fechaDesdeKPI3");
      let dateTo = document.getElementById("fechaHastaKPI3");
      apiMeansByPeriod.open(
        "GET",
        "../api/calculations/mean/" + dateFrom.value + "/" + dateTo.value,
        true
      );
      apiMeansByPeriod.send();
    }
