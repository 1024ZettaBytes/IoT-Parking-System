            $("#myModal").modal("show");
          }
        } else {
          // Abrir modal informando de error en la bd
          document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
          document.getElementById("mensaje").innerHTML =
            "Ocurrió un error al acceder a la base de datos. Intente nuevamente.";
          $("#myModal").modal("show");
        }
      }
    };

    function getPrediction() {
      let dateFrom = document.getElementById("inputFecha");
      apiPrediction.open(
        "GET",
        "../api/analytics/prediction/" + dateFrom.value,
