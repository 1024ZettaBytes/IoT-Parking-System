  <script type="text/javascript">
  var ctx = document.getElementById("chartPrediction");
  var noDataMessage = document.getElementById("noDataMessage");
    var socket = io.connect("http://" + "<%=ip%>" + ":8080", {
      forceNew: true
    });
    socket.on("currentPercentage", data => {
      const occupied = data.occupied;
      const free = data.free;
      updatePercentage(occupied, free);
    });
    socket.on("overLimit", data => {
      console.log("Debo mostrar notificación");
      demo.notify("Se ha sobrepasado el límite de "+data+"%.");
      demo.showNotification();
    });
    function updatePercentage(occupied, free) {
     
    }
    $(document).ready(function() {
      // Javascript method's body can be found in assets/js/demos.js
      // Set dates and get data for first time
      let fechaPrediccion = document.getElementById("fechaPrediccion");
      fechaPrediccion.value = "<%= moment().format("YYYY-MM-DD")%>";
      fechaPrediccion.min = "<%= moment().format("YYYY-MM-DD")%>";
      getPrediction();
      kmeans();
    });
    ///// Linear Regression ///
    let apiPrediction = new XMLHttpRequest();
    apiPrediction.onreadystatechange = function() {
      if (this.readyState === 4 && this.status === 200) {
        if ("ERROR_BD" !== this.responseText) {
          if ("NOT_ENOUGH_DATA" !== this.responseText) {
          updatePrediction(JSON.parse(this.responseText));
          } else {
              ctx.hidden = true;
           noDataMessage.hidden = false;
          }
        } else {
          // Abrir modal informando de error en la bd
          document.getElementById("exampleModalLabel").innerHTML = "ERROR!";
          document.getElementById("mensaje").innerHTML =
            "Ocurrió un error al acceder a la base de datos. Intente nuevamente.";
          $("#myModal").modal("show");
        }
      }
    };
    var chartPrediction;
    function updatePrediction(data) {
      var HOURS = [
        "08:00",
        "09:00",
        "10:00",
        "11:00",
        "12:00",
        "13:00",
        "14:00",
        "15:00",
        "16:00",
        "17:00",
        "18:00",
        "19:00",
        "20:00",
        "21:00",
        "22:00"
      ];
      let datos = [];
      for (let i = 8; i <= 22; i++) {
        datos.push(data[i]);
      }
      noDataMessage.hidden = true;
      ctx.hidden = false;
      if (chartPrediction) chartPrediction.destroy();
      chartPrediction = new Chart(ctx, {
        type: "bar",
        data: {
          labels: HOURS,
          datasets: [
            {
              label: "Porcentaje",
              data: datos,
              backgroundColor: "#87CB16"
            }
          ]
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                  max: 100,
                  stepSize: 25
                },
                scaleLabel: {
                  display: true,
                  fontSize: 16,
                  labelString: "Ocupación (%)"
                }
              }
            ],
            xAxes: [
              {
                scaleLabel: {
                  display: true,
                  fontSize: 16,
                  labelString: "Hora"
                }
              }
            ]
          }
        }
      });
    }
    function getPrediction() {
      let dateFrom = document.getElementById("fechaPrediccion");
      apiPrediction.open(
        "GET",
        "../api/analytics/prediction/" + dateFrom.value,
        true
      );
      apiPrediction.send();
    }

    ///// K-Means ///
    function kmeans(){
      var color = Chart.helpers.color;
		var scatterChartData = {
			datasets: [{
				label: 'Cluster 1',
				borderColor: window.chartColors.red,
				backgroundColor: color(window.chartColors.red).alpha(0.2).rgbString(),
				data: [{
					x: 3,
					y: 4,
				}, {
					x: 4,
					y: 7,
				}, {
					x: 2,
					y: 6,
				}, {
					x: 5,
					y: 3,
				}, {
					x: 1,
					y: 7,
				}, {
					x: 4,
					y: 10,
				}, {
					x: 6,
					y: 8,
				}, {
					x: 3,
					y: 11,
				}]
			}, {
				label: 'Cluster 2',
				borderColor: window.chartColors.blue,
				backgroundColor: color(window.chartColors.blue).alpha(0.2).rgbString(),
				data: [{
					x: 12,
					y: 10,
				}, {
					x: 8,
					y: 11,
				}, {
					x: 9,
					y: 13,
				}, {
					x: 10,
					y: 12,
				}]
			}]
    };
    var ctx = document.getElementById('charCluster').getContext('2d');
			window.myScatter = Chart.Scatter(ctx, {
				data: scatterChartData,
				options: {
					title: {
						display: false,
						text: 'Chart.js Scatter Chart'
					},
				}
				
			});
    }
